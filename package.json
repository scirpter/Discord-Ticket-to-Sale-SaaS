{
  "name": "voodoo",
  "private": true,
  "version": "0.1.0",
  "packageManager": "pnpm@10.28.2",
  "engines": {
    "node": "24.13.0"
  },
  "scripts": {
    "dev": "concurrently -n web,bot -c cyan,magenta \"pnpm --filter @voodoo/web-app dev\" \"pnpm --filter @voodoo/bot-worker dev\"",
    "lint": "eslint . --ext .ts,.tsx --max-warnings=0",
    "typecheck": "pnpm -r run typecheck",
    "test": "vitest run",
    "build": "pnpm --filter @voodoo/core build && pnpm --filter @voodoo/bot-worker build && pnpm --filter @voodoo/web-app build",
    "migrate": "drizzle-kit migrate --config=drizzle.config.ts",
    "setup": "pnpm migrate && pnpm deploy:commands",
    "deploy:commands": "pnpm --filter @voodoo/bot-worker deploy:commands"
  },
  "devDependencies": {
    "@types/node": "24.8.1",
    "@types/react": "19.2.2",
    "@types/react-dom": "19.2.2",
    "@typescript-eslint/eslint-plugin": "8.46.1",
    "@typescript-eslint/parser": "8.46.1",
    "@vitest/coverage-v8": "4.0.7",
    "concurrently": "9.2.1",
    "drizzle-kit": "0.31.7",
    "eslint": "9.38.0",
    "prettier": "3.6.2",
    "tsx": "4.20.6",
    "typescript": "5.9.3",
    "vitest": "4.0.7"
  }
}
